generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int     @id @default(autoincrement())
  email                     String  @unique
  password                  String
  refreshtoken              String?
  firstName                 String
  lastName                  String
  Task_Task_creatorIdToUser Task[]  @relation("Task_creatorIdToUser")
  Task_Task_workerIdToUser  Task[]  @relation("Task_workerIdToUser")
}

model Task {
  id                        Int     @id @default(autoincrement())
  title                     String
  description               String?
  creatorId                 Int
  workerId                  Int
  User_Task_creatorIdToUser User    @relation("Task_creatorIdToUser", fields: [creatorId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "creator_fkey")
  User_Task_workerIdToUser  User    @relation("Task_workerIdToUser", fields: [workerId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "worker_fkey")
}
